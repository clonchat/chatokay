        {
          "name": "Clerk Webhook - User Created",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "svix-id",
                "value": "msg_test123"
              },
              {
                "key": "svix-timestamp",
                "value": "{{$timestamp}}"
              },
              {
                "key": "svix-signature",
                "value": "v1,test-signature"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"id\": \"user_test123\",\n    \"email_addresses\": [\n      {\n        \"email_address\": \"test@example.com\"\n      }\n    ],\n    \"first_name\": \"Test\",\n    \"last_name\": \"User\",\n    \"created_at\": {{$timestamp}},\n    \"updated_at\": {{$timestamp}}\n  },\n  \"type\": \"user.created\",\n  \"object\": \"event\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/clerk-webhook",
              "host": ["{{baseUrl}}"],
              "path": ["clerk-webhook"]
            },
            "description": "Test webhook endpoint for user creation from Clerk"
          }
        },
        {
          "name": "Clerk Webhook - User Updated",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "svix-id",
                "value": "msg_test456"
              },
              {
                "key": "svix-timestamp",
                "value": "{{$timestamp}}"
              },
              {
                "key": "svix-signature",
                "value": "v1,test-signature"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"id\": \"user_test123\",\n    \"email_addresses\": [\n      {\n        \"email_address\": \"updated@example.com\"\n      }\n    ],\n    \"first_name\": \"Updated\",\n    \"last_name\": \"User\",\n    \"created_at\": {{$timestamp}},\n    \"updated_at\": {{$timestamp}}\n  },\n  \"type\": \"user.updated\",\n  \"object\": \"event\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/clerk-webhook",
              "host": ["{{baseUrl}}"],
              "path": ["clerk-webhook"]
            },
            "description": "Test webhook endpoint for user update from Clerk"
          }
